## Top editorconfig File
root = true

## Universal Settings
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
## editorconfig-tools is unable to ignore longs strings or urls
max_line_length = null
trim_trailing_whitespace = true

## JS/TS
[*.{js, ts}]
quote_type = single
